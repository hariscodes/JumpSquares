<!DOCTYPE html>
<% provide(:title, 'Register') %>

<script type="text/javascript">
 var RecaptchaOptions = {
    theme : 'clean'
 };
 </script>
 
	<center><div class="alert"><%= notice %><%= alert %></div></center>
		<div class="row">
          <div class="col-lg-6 col-lg-offset-3">
            <div class="well">
            	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal" }) do |f| %>
  				<%= devise_error_messages! %>
              
                <fieldset>
                  <legend><span class="glyphicon glyphicon-pencil" style="vertical-align:left"></span>  Registration</legend>
                  <div class="form-group">
                  	<%= f.label :email, "Email Address:", :class => "col-lg-3 control-label" %>      
                    <div class="col-lg-7">
                      <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email"  %>	 
                    </div>
                  </div>
                  
                  <div class="form-group">
                  	<%= f.label :password, "Password:", :class => "col-lg-3 control-label" %>
                    <div class="col-lg-7">
                      <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
                    </div>
                  </div>
                  
                  <div class="form-group">
                  	<%= f.label :password_confirmation, "Re-Enter Password:", :class => "col-lg-3 control-label" %>
                    <div class="col-lg-7">
                      <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation" %>
                    </div>
                  </div>
                  
                  <center>
	                  <div class="form-group">
	                      <%= recaptcha_tags %>
	                      <br>
	                      <%= f.submit "Register", class: 'btn btn-primary' %>
	                    
	                  </div>
                  </center>	 
                </fieldset>
              
            </div>
          </div>
        </div>
<% end %>


</html>
