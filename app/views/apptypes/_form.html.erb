<!DOCTYPE html>
		<div class="row">
          <div class="col-lg-6 col-lg-offset-3">
            <div class="well">
            	<%= form_for @apptype, html: { multipart: true, :class => "form-horizontal" } do |f| %>
				  <% if @apptype.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@apptype.errors.count, "error") %> prohibited this Application Type from being saved:</h2>
				
				      <ul>
				      <% @apptype.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
				      </ul>
				    </div>
				  <% end %>
            	   
                <fieldset>
                  <legend><span class="glyphicon glyphicon-th" style="vertical-align:left"></span> AppType</legend>
                  <div class="form-group">
                  	<%= f.label "Application Type (Name):", :class => "col-lg-3 control-label" %>       
                    <div class="col-lg-7">
                      <%= f.text_field :name, :class => "form-control" %>                    	 
                    </div>
                  </div>
                                   
                  <div class="form-group">
                  	<%= f.label "Upload an Image or Logo:", :class => "col-lg-3 control-label" %>
                    <div class="col-lg-7">
                      <%= f.file_field :image %>
                    </div>
                  </div>                 
                                  
                  <br>
                  <center>
	                  <div class="form-group">	                    
	                      <%= f.submit class: 'btn btn-primary' %>
	                  </div>
	                  <%= link_to 'Back', apptypes_path %> |
					  <%= link_to 'Home', :userroot %>
                  </center>	 
                </fieldset>
              
            </div>
          </div>
        </div>
<% end %>

</html>


