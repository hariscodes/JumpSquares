<div class="row">
	 <div class="col-xs-6 col-sm-4 col-md-2">
	 <div class="clearfix visible-xs"></div>
	 	<%= form_tag apptype_requests_path, :method => :get do %>
                      		<%= hidden_field_tag :direction, params[:direction] %>
  							<%= hidden_field_tag :sort, params[:sort] %> 							
    						<%= text_field_tag :search, params[:search], {:class => "form-control col-lg-8", :placeholder => "Search"} %>
					  <% end %>  
	 </div>	
	 <div class="col-xs-6 col-sm-4 col-md-2">	      
		<div class="btn-toolbar">
			<div class="btn-group">
				<button class="btn dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="100">Sort By <b class="caret"></b></button>
					<ul class="dropdown-menu">
						<li><%= sort_link 'Requester', :apprequestor %></li>
						<li><%= sort_link 'Application Name', :appname %></li>
						<li><%= sort_link 'Completed', :completed %></li>
					</ul>
			</div>                   
	   </div>
  	</div>	
  	<div class="col-xs-6 col-sm-4 col-md-2">
  		<%= link_to "Request a New Application Type", new_apptype_request_path, class: "btn btn-info" %>
   </div>
</div>

<div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          	
            <div class="page-header">
              <h1 id="tables">AppType Requests</h1>
            </div>
            <div class="bs-example">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
					<th>Requester</th>
					<th>Application Name</th>
				    <th>Image URL</th>		    
				    <th>Completed?</th>
                    <th></th>
                    <% if current_user.has_role? :admin %>
                    <th></th>
                    <th></th>
                    <% else %>
                    <% end %>
                  </tr>
                </thead>
                
                	<tbody>
					    <% @apptype_requests.each do |apptype_request| %>
					      <tr>
					        <td><%= apptype_request.apprequestor %></td>
					        <td><%= apptype_request.appname %></td>
					        <td><%= apptype_request.imageurl %></td>					        
					        <td><%= apptype_request.completed %></td>
					        <td><%= link_to 'Edit', edit_apptype_request_path(apptype_request) %></td>
					        <% if current_user.has_role? :admin %>
					        <td><%= link_to 'Show', apptype_request %></td>
					        <td><%= link_to 'Destroy', apptype_request, method: :delete %></td>
					        <% else %>
                    		<% end %>
					      </tr>
					    <% end %>
					  </tbody>
                  
                
              </table>
            </div>
          </div>
        </div>
      </div>
      <center><%= will_paginate @apptype_requests, renderer: BootstrapPagination::Rails %></center>
</html>
